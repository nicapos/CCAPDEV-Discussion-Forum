<html>

<head>
    <title>Create Subforum | discussip</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/threads.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/nav.js"></script>
    <script src="/js/createSubf.js"></script>
    <style>
        body {
            background-color: #F4F4F4;
        }

        #text-editor {
            display: block;
            margin-top: 50px;
        }

        content {
            height: 100px;
        }

        #text-editor label, #text-editor input, #text-editor textarea {
            display: block;
            width: 100%;
            resize: none;
        }

        #text-editor > h3 {
            margin-bottom: 10px;
        }

        #text-editor input, #text-editor textarea {
            margin-bottom: 20px;
            border: 1px solid #E5E5E5;
            border-radius: 5px;
            background-color: #FFFFFF;
            padding: 10px 15px;
        }

        #error {
            margin-top: -10px;
            color: red;
        }
    </style>
</head>

<body>
    {{> navbar user=user}}

    <div id="text-editor" class="box-container">
        <h3>Create Subforum</h3>

        <form id="createSubf" action="/new/subf" method="post">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" />

            <label for="description">Short Description</label>
            <textarea name="description" id="description" maxlength="100"></textarea>
        </form>

        <p id="error"></p>

        <div id="actions">
            <button class="light">Cancel</button>&nbsp;
            <button id="submitSubforum" class="green">Post</button>
        </div>
    </div>

    <!-- Set active item on navbar -->
    <script>
        $('#subforums').addClass('active');
        $('nav #createSubf').addClass('active');
    </script>
</body>

</html>
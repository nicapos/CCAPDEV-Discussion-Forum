<html>

<head>
    <title>Edit Profile</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/nav.css">
	<link rel="stylesheet" href="/css/profilepage-styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="/js/editProfile.js"></script>
    <script src="/js/nav.js"></script>
    <style>
        body {
            background-color: #F4F4F4;
        }
		#edit-account { 
			width: auto; 
		}
		#msg {
			font-style: italic;
			color: grey;
			display: inline;
		}
    </style>
</head>

<body>
    {{> navbar user=username}}

	<div id="display-body">
	<!--form method="POST"-->
	<div class="profile-box center">
		<div class="col">
			<img id="profile-picture" src="/resources/profile2.png" />
			<input type="text" id="edit-name" name="name" value="{{name}}" placeholder="Display Name" />
			<h2>{{username}}</h2>

			<br />

			<button id="view-profile" class="green">View Profile</button>
			<button id="edit-account" class="light">Change Account Details</button>
		</div>
		<div class="col">
			<h3>About Me</h3>
			<div id="edit-about" contenteditable>{{aboutMe}}</div>
			<h3>My Interests</h3>
			<div id="edit-interests" contenteditable>{{myInterests}}</div>

			<div class="btn-container">
				<p id="msg"></p>
				<button id="change_profile" class="green" disabled>Save</button>
				<button id="cancel" class="light">Cancel</button>
			</div>
		</div>
	</div>
	<!--/form-->
	</div>

</body>

</html>
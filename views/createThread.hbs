<html>

<head>
    <title>Copypastas</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/threads.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/nav.js"></script>
    <style>
        body {
            background-color: #F4F4F4;
        }

        #text-editor {
            display: block;
            margin-top: 20px;
        }

        content {
            height: 100px;
        }
    </style>
</head>

<body>
    {{> navbar user=user}}

    <div id="subforum-heading">
        <div id="subforum-info">
            <a href="index.html">
                <h2>Copypastas</h2>
            </a>
            <p>Share your favorite copypastas.</p>
        </div>
    </div>

    <div id="text-editor" class="box-container">
        <h3>Create Thread</h3>

        <div id="content" class="box-container" contenteditable></div>

        <div id="actions">
            <button class="light" onclick="history.back()">Cancel</button>&nbsp;
            <button class="green">Post</button>
        </div>
    </div>

    <!-- Set active item on navbar -->
    <script>
        $('nav > #subforums').addClass('active');
    </script>
</body>

</html>
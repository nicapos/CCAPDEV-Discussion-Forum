<html>

<head>
    <title>@username | discussip</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/nav.css">
	<link rel="stylesheet" href="/css/profilepage-styles.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="/js/profile.js"></script>
    <script src="/js/nav.js"></script>
    <style>
        body {
            background-color: #F4F4F4;
        }
    </style>
</head>

<body>
    {{> navbar user=user}}

	<div id="display-body">
	<div class="profile-box center">
		<div class="col">
			<img id="profile-picture" src="/resources/profile2.png" />
			<h1>{{name}}</h1>
			<h2>{{username}}</h2>
		</div>
		<div class="col">
			<h3>About Me</h3>
			<p id="about-me">{{aboutMe}}</p>
			<h3>My Interests</h3>
			<p id="my-interests">{{myInterests}}</p>
		</div>
		<button id="edit-btn">Edit</button>
	</div>
	</div>
</body>

</html>